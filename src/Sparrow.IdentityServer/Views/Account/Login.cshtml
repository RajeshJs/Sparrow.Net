@model LoginViewModel

@{
    ViewData["Title"] = "登录";
}

<div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="card">
                <div class="card-header">登 录</div>
                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input class="form-control" placeholder="请输入账号" asp-for="UserName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input class="form-control" placeholder="请输入密码" type="password" asp-for="Password" />
                            </div>
                            <div class="form-group form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe"></label>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="button" value="login" class="btn btn-primary">登 录</button>
                                <button type="submit" name="button" value="cancel" class="btn btn-dark">取 消</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
